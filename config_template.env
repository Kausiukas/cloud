# ==============================================
# Background Agents System Configuration
# ==============================================

# -------------------------
# Database Configuration
# -------------------------
# PostgreSQL database settings
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=background_agents
POSTGRESQL_USER=your-db-username
POSTGRESQL_PASSWORD=your-db-password
POSTGRESQL_SSL_MODE=prefer

# Database connection pool settings
POSTGRESQL_POOL_SIZE=10
POSTGRESQL_MAX_OVERFLOW=20
POSTGRESQL_TIMEOUT=30

# -------------------------
# LangSmith Integration
# -------------------------
# LangSmith API configuration
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=background-agents-system

# LangSmith tracing settings
LANGSMITH_TRACING=true
LANGSMITH_TIMEOUT=30

# -------------------------
# OpenAI Configuration
# -------------------------
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# -------------------------
# System Settings
# -------------------------
# Application environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Application paths
DATA_DIR=data
LOGS_DIR=logs
TEMP_DIR=temp

# -------------------------
# Agent Configuration
# -------------------------
# Default agent settings
DEFAULT_HEARTBEAT_INTERVAL=60
DEFAULT_PERFORMANCE_INTERVAL=120
DEFAULT_MAX_RETRIES=3
DEFAULT_TIMEOUT=30

# Agent runtime intervals (used by agent code)
HEARTBEAT_INTERVAL=60
PERFORMANCE_INTERVAL=120

# Specific agent configurations
HEARTBEAT_HEALTH_AGENT_ENABLED=true
PERFORMANCE_MONITOR_ENABLED=true
LANGSMITH_BRIDGE_ENABLED=true
AI_HELP_AGENT_ENABLED=true

# -------------------------
# Monitoring & Alerting
# -------------------------
# Health monitoring settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=30
HEARTBEAT_TIMEOUT=120
PERFORMANCE_METRICS_INTERVAL=60

# Alerting configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your-alert-email@domain.com
ALERT_EMAIL_PASSWORD=your-email-password
ALERT_EMAIL_TO=admin@yourdomain.com

# -------------------------
# Performance Settings
# -------------------------
# Performance monitoring thresholds
CPU_USAGE_THRESHOLD=80
MEMORY_USAGE_THRESHOLD=85
DISK_USAGE_THRESHOLD=90
RESPONSE_TIME_THRESHOLD=5000

# -------------------------
# Security Settings
# -------------------------
# Application security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_HEADER=X-API-Key
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# -------------------------
# Backup & Recovery
# -------------------------
# Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups

# Data retention settings
DATA_RETENTION_DAYS=30

# -------------------------
# Dashboard Configuration
# -------------------------
DASHBOARD_TITLE="Background Agents System"
DASHBOARD_THEME=light
DASHBOARD_AUTO_REFRESH=true
DASHBOARD_REFRESH_INTERVAL=30

# -------------------------
# Development Settings
# -------------------------
# Development-only settings
DEV_MODE=false
DEV_MOCK_DATA=false
DEV_DISABLE_AUTH=false

# Testing configuration
POSTGRESQL_TEST_DB=background_agents_test
TEST_MODE=false

# -------------------------
# External Services
# -------------------------
# Email service configuration (optional)
EMAIL_SERVICE_ENABLED=false
GMAIL_ADDRESS=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
OUTLOOK_ADDRESS=your-outlook@domain.com
OUTLOOK_PASSWORD=your-outlook-password

# Vector database (optional)
VECTOR_DB_ENABLED=false
VECTOR_DB_PATH=data/vectorstore
CHROMA_HOST=localhost
CHROMA_PORT=8000

# -------------------------
# Legacy Compatibility
# -------------------------
# Backward compatibility with older configurations
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=background-agents-system
LANGCHAIN_TRACING_V2=true
